<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.AddEmployeController"
          alignment="CENTER" hgap="10" vgap="10" stylesheets="@style.css">

   <Label text="Nouvel Employé" GridPane.columnSpan="2" GridPane.halignment="CENTER">
      <font>
         <Font size="20" />
      </font>
   </Label>

   <Label text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
   <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

   <Label text="Prénom" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
   <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

   <Label text="Contact" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
   <TextField fx:id="contactField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>

   <Label text="Rôle" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
   <TextField fx:id="roleField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200"/>

   <Button fx:id="ajouterButton" text="Ajouter Employé" onAction="#handleAjouterEmploye"
           GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="CENTER"/>

   <Label fx:id="messageLabel" text="" styleClass="error-label" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.halignment="CENTER"/>
</GridPane>
