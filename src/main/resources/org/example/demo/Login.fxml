<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.LoginController"
      spacing="10" alignment="CENTER" stylesheets="@style.css" prefWidth="300" prefHeight="250">
    <Label text="Connexion" styleClass="title" />

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Nom d'utilisateur" />
        <TextField fx:id="usernameField" prefWidth="200" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Mot de passe" />
        <PasswordField fx:id="passwordField" prefWidth="200" />
    </VBox>

    <Button text="Se connecter" onAction="#handleLogin" prefWidth="200" />
    <Label fx:id="errorLabel" text="" styleClass="error-label" />
</VBox>
